<head>
  <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet">
</head>
<div class="top-header">
  <h1 class="header-title">futures</h1>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "destroy" %></li>
  <ul class="header-lists hidden" id="pull-down">
   <% if user_signed_in? %>
    <li><%= link_to "ツイートする", new_tweet_path, class: "new_tweet" %>
    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "destroy" %></li>
    <li><%= link_to "マイページ", "#" %></li>
   <% else %>
    <li><%= link_to "新規登録", new_user_registration_path, class: "signup" %></li>
    <li><%= link_to "ログイン", new_user_session_path, class: "signin" %></li>
   <% end %>
  </ul>
   
  <div class="lists-menu" id="lists">menu
  </div>
</div>

<div class="center-box">
  <div class="home-logo">
    <p class="home-text">ホーム</p>
  </div>
  <div class="home-icon">
    <i class="fa fa-spinner fa-2x"></i>
  </div>
</div>

<div class="top-contents">
  <div class="tweets-contents">
    <% @tweets.each do |tweet| %>
      <ul class="tweets-list">
        <div class="tweet-info">
          <div class="tweet-top"><li class="user-name"><%= tweet.user.nickname %></li></div>
          <div class="tweet-top"><li class="create-time"><%= l tweet.created_at %></li></div>
          <div class="tweet-icon"><i class="fas fa-angle-down"></i></div>
        </div>
        <li class="user-task"><i class="fas fa-book-reader"></i>：<%= tweet.category.task %></li>
        <li class="study_time"><i class="fas fa-stopwatch"></i>：<%= tweet.hour_time %>h</li>
        <li class="study-text"><%= simple_format(tweet.text) %></li>
      </ul>
    <% end %>
  </div>
</div>