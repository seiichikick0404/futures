<div class="new-tweet">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
    <div class="contents-row-two">
      <div class="container-two">
        <%= form_with(model: @tweet_category, url: tweets_path, local: true) do |form| %>
          <h3>投稿する</h3>
          <%= form.collection_select(:category_id, @categories, :id, :task, {prompt: "タスクを選択して下さい"}, {} ) %>
          <%= form.text_area :hour_time, placeholder: "積み上げ時間を半角数字で入力してください。 小数点第一位まで可！", class: "time_area" %>
          <%= form.text_area :text, placeholder: "text", rows: "10" %>
          <%= form.submit "積み上げる" %>
        <% end %>
        <div class="top-return">
          <%= link_to "トップページへ戻る", root_path %>
        </div>
      </div>
    </div>
</div>